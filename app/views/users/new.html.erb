<h1>Sign Up.</h1>

<%= render partial: 'layouts/errors', locals: {object: @user} %>

<%= form_for(@user) do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %><br><br>

    <%= f.label :password %>
    <%= f.password_field :password %><br><br>

    <%= f.submit "Sign Up" %>
<% end %>

<h3>Already have an account? Please <%= link_to "Log In.", login_path %></h3>